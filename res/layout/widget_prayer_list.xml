<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appwidget_bg"
    style="@style/PrayerBoxTheme"
    android:orientation="vertical" >
 <LinearLayout android:layout_width="match_parent"
     		   android:layout_height="40dp"
            	android:textColor="#000000"
     		   android:background="@drawable/ab_solid_prayerboxtheme"
     		   android:orientation="horizontal">
     <Button android:background="@drawable/prayerpig"
         	 android:layout_height="40dp"
         	 android:layout_width="40dp"/>
     <TextView  android:text="@string/prayer_widget"
         		android:textColor="#000000"
	         	android:layout_height="wrap_content"
	            android:layout_gravity="center" 
	            android:gravity="center|left"
	            android:layout_marginLeft="5dp"
         		android:textSize="20sp"
         		android:layout_width="fill_parent"/>
 </LinearLayout>
<ListView 
  android:id="@+id/widget_plist"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="3dp"
  android:layout_marginLeft="3dp"
  android:fastScrollAlwaysVisible="false"
  android:fastScrollEnabled="false"
  android:scrollbars="none" 
/>
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Please reload the widget."
        android:textSize="20sp"
        android:visibility="gone" />
   </LinearLayout>