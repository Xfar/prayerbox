<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.uwccf.prayerbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/prayerpig"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="ca.uwccf.prayerbox.PrayerListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >>
        </activity>
        <activity
            android:name="ca.uwccf.prayerbox.PrayerDetailsActivity"
            android:parentActivityName="ca.uwccf.prayerbox.PrayerListActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uwccf.prayerbox.PrayerListActivity" />
        </activity>
        <activity android:name="ca.uwccf.prayerbox.PrayerLoginActivity" android:label="@string/app_name"><intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
        <activity android:name="ca.uwccf.prayerbox.PrayerAddEditActivity"
                  android:parentActivityName="ca.uwccf.prayerbox.PrayerListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uwccf.prayerbox.PrayerListActivity" />
        </activity>
     </application>

</manifest>
